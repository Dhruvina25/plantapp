<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.bootstrapfx.BootstrapFX?>

<BorderPane fx:id="root" prefHeight="300.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.plantapp.SearchController">
    <stylesheets>
        <BootstrapFX fx:factory="bootstrapFXStylesheet"/>
    </stylesheets>
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <TextField fx:id="searchField" prefHeight="26.0" prefWidth="486.0" promptText="Enter plant to search..." styleClass="form-control" />
            <Button fx:id="searchButton" styleClass="btn btn-primary" text="Search" />
        </HBox>
    </top>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <TextArea fx:id="resultArea" editable="false" prefHeight="227.0" prefWidth="553.0" styleClass="form-control" wrapText="true" />
        </HBox>
    </bottom>

</BorderPane>
